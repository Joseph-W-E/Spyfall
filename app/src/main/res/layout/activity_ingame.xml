<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ingame_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/ingame_timer_start"
        style="@style/GenericTextViewStyleBorderless" />

    <LinearLayout
        android:id="@+id/ingame_ll_player_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/ingame_txt_hide_or_show_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingame_show_hide"
            android:layout_gravity="end"
            style="@style/GenericTextViewStyleBorderless"
            android:padding="0dp"
            android:layout_margin="0dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:id="@+id/ingame_ll_locations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal" />

    </ScrollView>

</LinearLayout>